@model IEnumerable<DoriDongGiay.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-md-3 mb-4">
            <div class="card" style="border-radius: 15px; overflow: hidden; box-shadow: 0 10px 20px rgba(0,0,0,0.1);">
                <div class="card-header" style="padding: 20px; background: linear-gradient(135deg, var(--primary-color) 0%, #5c6bc0 100%);">
                    <h5 class="mb-0" style="font-weight: 700; color: white; font-size: 1.3rem;">Bộ lọc</h5>
                </div>
                <div class="card-body" style="padding: 25px;">
                    <form asp-action="Index" method="get">
                        <div class="mb-4">
                            <label class="form-label" style="font-weight: 600; color: var(--text-color); margin-bottom: 10px;">Danh mục</label>
                            <select name="categoryId" class="form-select" onchange="this.form.submit()" style="border-radius: 10px; padding: 12px 15px; border: 1px solid #ddd; box-shadow: 0 2px 5px rgba(0,0,0,0.05);">
                                <option value="">Tất cả danh mục</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id" selected="@(ViewBag.SelectedCategory == category.Id)">
                                        @category.Name
                                    </option>
                                }
                            </select>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label" style="font-weight: 600; color: var(--text-color); margin-bottom: 10px;">Tìm kiếm</label>
                            <input type="text" name="searchString" class="form-control" value="@ViewBag.SearchString" placeholder="Tên sản phẩm..." 
                                   style="border-radius: 10px; padding: 12px 15px; border: 1px solid #ddd; box-shadow: 0 2px 5px rgba(0,0,0,0.05);" />
                        </div>
                        
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary flex-grow-1" style="padding: 12px 15px; border-radius: 30px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">
                                <i class="fas fa-search me-2"></i>Tìm kiếm
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary flex-grow-1" style="padding: 12px 15px; border-radius: 30px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">
                                <i class="fas fa-redo-alt me-2"></i>Đặt lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Product Grid -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 style="font-size: 2.2rem; font-weight: 700; color: var(--primary-color);">@ViewData["Title"]</h2>
                <span class="badge bg-primary" style="font-size: 1rem; padding: 8px 15px; border-radius: 20px;">@Model.Count() sản phẩm</span>
            </div>

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100" style="border: none; border-radius: 15px; overflow: hidden; transition: all 0.3s ease; box-shadow: 0 10px 20px rgba(0,0,0,0.08);">
                                <div style="position: relative; overflow: hidden;">
                                    <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/no-image.jpg" : product.ImageUrl)" 
                                         alt="@product.Name" class="card-img-top" style="height: 250px; object-fit: cover; transition: transform 0.5s ease;">
                                    
                                    @if (product.OldPrice.HasValue)
                                    {
                                        var discount = Math.Round((1 - (product.Price / product.OldPrice.Value)) * 100);
                                        <span class="badge bg-danger" style="position: absolute; top: 15px; right: 15px; padding: 8px 15px; font-size: 0.9rem; border-radius: 20px; box-shadow: 0 3px 10px rgba(0,0,0,0.1);">-@discount%</span>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column" style="padding: 20px;">
                                    <span class="badge bg-light text-dark mb-2" style="align-self: flex-start; font-weight: 500; padding: 5px 10px; border-radius: 15px;">@product.Category.Name</span>
                                    <h5 class="card-title" style="font-weight: 700; font-size: 1.2rem; margin-bottom: 10px; color: var(--primary-color);">@product.Name</h5>
                                    <p class="card-text" style="color: #666; margin-bottom: 15px; font-size: 0.9rem;">@(product.Description?.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)</p>
                                    
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        @if (product.OldPrice.HasValue)
                                        {
                                            <div>
                                                <div class="text-decoration-line-through text-muted" style="font-size: 0.9rem;">@product.OldPrice.Value.ToString("N0") ₫</div>
                                                <div class="fw-bold text-danger" style="font-size: 1.2rem;">@product.Price.ToString("N0") ₫</div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="fw-bold" style="font-size: 1.2rem; color: var(--primary-color);">@product.Price.ToString("N0") ₫</div>
                                        }
                                        
                                        <span class="badge bg-light text-dark" style="font-weight: 500; padding: 5px 10px; border-radius: 15px;">
                                            <i class="fas fa-box me-1"></i> @product.StockQuantity
                                        </span>
                                    </div>
                                    
                                    <div class="mt-auto">
                                        <a asp-action="Detail" asp-route-id="@product.Id" 
                                           class="btn btn-outline-primary w-100 mb-2" style="border-radius: 30px; padding: 10px; font-weight: 600;">
                                            <i class="fas fa-eye me-2"></i>Xem chi tiết
                                        </a>
                                        
                                        @if (product.StockQuantity > 0)
                                        {
                                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-primary w-100" style="border-radius: 30px; padding: 10px; font-weight: 600;">
                                                    <i class="fas fa-shopping-cart me-2"></i>Thêm vào giỏ
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary w-100" style="border-radius: 30px; padding: 10px; font-weight: 600; opacity: 0.7;" disabled>
                                                <i class="fas fa-times-circle me-2"></i>Hết hàng
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info" style="border-radius: 15px; padding: 20px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                    <i class="fas fa-info-circle me-2"></i> Không tìm thấy sản phẩm nào phù hợp với tiêu chí tìm kiếm.
                </div>
            }
        </div>
    </div>
</div>