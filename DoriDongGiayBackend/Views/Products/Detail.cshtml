@model Product
@{
    ViewData["Title"] = Model.Name + " - FashionShop";
    var relatedProducts = ViewBag.RelatedProducts as List<Product>;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p class="text-muted">Danh mục: @Model.Category.Name</p>
            
            <div class="price-section mb-3">
                <span class="current-price h3 text-primary fw-bold">@Model.Price.ToString("N0") ₫</span>
                @if (Model.OldPrice.HasValue)
                {
                    <span class="old-price h5 text-muted text-decoration-line-through ms-2">
                        @Model.OldPrice.Value.ToString("N0") ₫
                    </span>
                    <span class="discount-badge badge bg-danger ms-2">
                        Giảm @((int)((1 - Model.Price / Model.OldPrice.Value) * 100))%
                    </span>
                }
            </div>

            <div class="stock-info mb-3">
                @if (Model.StockQuantity > 0)
                {
                    <span class="text-success"><i class="fas fa-check-circle"></i> Còn hàng</span>
                    <small class="text-muted"> (@Model.StockQuantity sản phẩm)</small>
                }
                else
                {
                    <span class="text-danger"><i class="fas fa-times-circle"></i> Hết hàng</span>
                }
            </div>

            <p class="product-description">@Model.Description</p>

            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mb-4">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="row align-items-center">
                    <div class="col-auto">
                        <label class="form-label">Số lượng:</label>
                    </div>
                    <div class="col-auto">
                        <input type="number" name="quantity" value="1" min="1" max="@Model.StockQuantity" 
                               class="form-control" style="width: 100px;" 
                               @(Model.StockQuantity == 0 ? "disabled" : "")>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-lg w-100" 
                                @(Model.StockQuantity == 0 ? "disabled" : "")>
                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
                        </button>
                    </div>
                </div>
            </form>

            <div class="product-features">
                <h5>Thông tin sản phẩm:</h5>
                <ul>
                    <li>Chất liệu cao cấp</li>
                    <li>Kiểu dáng thời trang</li>
                    <li>Dễ dàng phối đồ</li>
                    <li>Bảo hành đổi trả 7 ngày</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (relatedProducts != null && relatedProducts.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="mb-4">Sản phẩm liên quan</h3>
                <div class="row">
                    @foreach (var product in relatedProducts)
                    {
                        <div class="col-lg-3 col-md-4 col-6 mb-4">
                            <div class="card h-100">
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h6 class="card-title">@product.Name</h6>
                                    <div class="price-section">
                                        <span class="current-price text-primary fw-bold">@product.Price.ToString("N0") ₫</span>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a asp-action="Detail" asp-route-id="@product.Id" 
                                       class="btn btn-outline-primary btn-sm w-100">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>